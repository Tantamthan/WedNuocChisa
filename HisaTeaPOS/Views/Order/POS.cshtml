    // Chuyển tên món về dạng không dấu
    var unsignedName = removeVietnameseTones(productName);

            // So sánh: Nếu có chứa từ khóa thì hiện, không thì ẩn
            $(this).toggle(unsignedName.indexOf(unsignedValue) > -1)
        });
    });
});
