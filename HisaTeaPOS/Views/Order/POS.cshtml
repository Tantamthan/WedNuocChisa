<script>
    // --- 1. INITIALIZE DATA ---
    const savedCart = localStorage.getItem('hisa_cart');
    let cart = savedCart ? JSON.parse(savedCart) : [];

    let currentPaymentMethod = 'cash';
    let currentPriceRate = 1.0; // Default price rate
    const sizeConfig = { 'S': 0.8, 'M': 1.0, 'L': 1.3 };

    // Coupon variables
    let currentDiscount = 0;
    let currentKmId = null;

    // Temporary Modal Data
    let tempItem = {
        id: 0, name: '', basePrice: 0, img: '',
        size: 'M', sugar: 100, qty: 1,
        selectedToppings: {} // Use object for topping counts: { toppingId: qty }
    };
    let currentToppingPrice = 0;

    // --- ON PAGE LOAD ---
    document.addEventListener("DOMContentLoaded", function () {
        if (cart.length > 0) renderCart();
    });

    // --- 2. HANDLE ORDER SOURCE (APP MARKUP) ---
    function changeOrderSource() {
        const select = document.getElementById('order-source');
        currentPriceRate = parseFloat(select.options[select.selectedIndex].getAttribute('data-rate'));
        renderCart(); // Re-calculate prices
    }

    // --- 3. COUPON LOGIC ---
    function applyCoupon() {
        const code = $('#coupon-code').val();
        if (!code) return;

        // Calculate raw total based on current cart and price rate
        const currentTotal = cart.reduce((sum, item) => sum + ((item.price * currentPriceRate) * item.qty), 0);

        $.post('/Order/CheckCoupon', { code: code, total: currentTotal }, function (res) {
            if (res.success) {
                currentDiscount = res.discount;
                currentKmId = res.kmId;

                $('#discount-row').removeClass('hidden');
                $('#discount-amount').text('-' + currentDiscount.toLocaleString() + 'đ');

                // Refresh cart UI to update total
                renderCart();
                alert('Áp dụng mã thành công!');
            } else {
                alert(res.message);
                resetCoupon();
                renderCart();
            }
        });
    }

    function resetCoupon() {
        currentDiscount = 0;
        currentKmId = null;
        $('#discount-row').addClass('hidden');
        $('#coupon-code').val('');
    }

    // --- 4. MODAL & TOPPING LOGIC ---
    function selectProduct(id, name, price, img) {
        // Reset temp item
        tempItem = {
            id: id, name: name, basePrice: price, img: img,
            size: 'M', sugar: 100, qty: 1,
            selectedToppings: {}
        };

        $('#modal-title').text(name);
        $('#modal-base-price').text(price.toLocaleString() + 'đ');
        $('#modal-img').attr('src', img || 'https://via.placeholder.com/400');

        // Reset UI buttons
        $('.size-btn').removeClass('bg-white text-orange-600 shadow-sm').addClass('text-gray-500');
        $('#size-M').addClass('bg-white text-orange-600 shadow-sm').removeClass('text-gray-500');
        $('.sugar-btn').removeClass('border-orange-500 bg-orange-50 text-orange-700');
        $('#sugar-100').addClass('border-orange-500 bg-orange-50 text-orange-700');

        // Reset topping counters
        $('.topping-qty-display').text('0');

        updateModalTotal();
        $('#modal-qty').text(1);
        $('#productModal').removeClass('hidden');
    }

    function changeToppingQty(id, name, price, delta) {
        let currentQty = tempItem.selectedToppings[id] || 0;
        let newQty = currentQty + delta;
        if (newQty < 0) return;

        if (newQty === 0) {
            delete tempItem.selectedToppings[id];
        } else {
            tempItem.selectedToppings[id] = newQty;
            // Save extra info needed for cart
            tempItem.selectedToppings[id + '_info'] = { name: name, price: price };
        }

        // Update UI
        $('#top-qty-' + id).text(newQty);
        updateModalTotal();
    }

    function updateModalTotal() {
        // Calculate total topping price
        let totalToppingPrice = 0;
        for (const key in tempItem.selectedToppings) {
            if (!key.endsWith('_info')) {
                const qty = tempItem.selectedToppings[key];
                const info = tempItem.selectedToppings[key + '_info'];
                if (info) totalToppingPrice += (qty * info.price);
            }
        }

        const unitPrice = (tempItem.basePrice * sizeConfig[tempItem.size]) + totalToppingPrice;
        const total = unitPrice * tempItem.qty;
        $('#modal-total').text(total.toLocaleString() + 'đ');
    }

    function confirmAddToCart() {
        // Convert toppings object to array for backend
        let toppingsArr = [];
        let toppingNamesArr = [];
        let totalToppingPrice = 0;

        for (const key in tempItem.selectedToppings) {
            if (!key.endsWith('_info')) {
                const id = parseInt(key);
                const qty = tempItem.selectedToppings[key];
                const info = tempItem.selectedToppings[key + '_info'];

                for (let i = 0; i < qty; i++) {
                    toppingsArr.push(id);
                    toppingNamesArr.push(info.name);
                }
                totalToppingPrice += (qty * info.price);
            }
        }

        // Store BASE PRICE in cart. App Markup is applied at Render/Checkout time.
        const unitBasePrice = (tempItem.basePrice * sizeConfig[tempItem.size]) + totalToppingPrice;

        cart.push({
            cartId: Date.now(),
            id: tempItem.id,
            name: tempItem.name,
            price: unitBasePrice, // Base price (before markup)
            qty: tempItem.qty,
            size: tempItem.size,
            sugar: tempItem.sugar,
            tops: toppingsArr,
            topNames: toppingNamesArr
        });

        renderCart();
        closeModal();
    }

    // Helper functions
    function setSize(s) { tempItem.size = s; updateModalStyles('size', s); updateModalTotal(); }
    function setSugar(l) { tempItem.sugar = l; updateModalStyles('sugar', l); }
    function adjustQty(d) { let n = tempItem.qty + d; if (n >= 1) { tempItem.qty = n; $('#modal-qty').text(n); updateModalTotal(); } }
    function closeModal() { $('#productModal').addClass('hidden'); }

    function updateModalStyles(type, val) {
        if (type === 'size') {
            $('.size-btn').removeClass('bg-white text-orange-600 shadow-sm').addClass('text-gray-500');
            $('#size-' + val).addClass('bg-white text-orange-600 shadow-sm').removeClass('text-gray-500');
        } else {
            $('.sugar-btn').removeClass('border-orange-500 bg-orange-50 text-orange-700');
            $('#sugar-' + val).addClass('border-orange-500 bg-orange-50 text-orange-700');
        }
    }

    // --- 5. RENDER CART ---
    function renderCart() {
        localStorage.setItem('hisa_cart', JSON.stringify(cart));
        const container = document.getElementById('cartItems');
        const totalEl = document.getElementById('totalAmount');
        const subTotalEl = document.getElementById('subTotal');

        if (!container) return;
        container.innerHTML = '';
        let total = 0;

        cart.forEach((item, index) => {
            // Apply Markup (Price Rate)
            const displayPrice = item.price * currentPriceRate;
            const itemTotal = displayPrice * item.qty;
            total += itemTotal;

            // Group Toppings for Display
            let toppingHtml = '';
            if (item.topNames && item.topNames.length > 0) {
                const counts = {};
                item.topNames.forEach(name => { counts[name] = (counts[name] || 0) + 1; });
                const displayParts = Object.keys(counts).map(name => {
                    const count = counts[name];
                    return count > 1 ? `${name} <b class="text-orange-600">x${count}</b>` : name;
                });
                toppingHtml = `<div class="text-xs text-gray-500 mt-1 border-t border-dashed pt-1">+ ${displayParts.join(', ')}</div>`;
            }

            const html = `
                <div class="p-3 bg-white border border-gray-100 rounded-xl shadow-sm flex gap-3 relative animate-in fade-in slide-in-from-right-4">
                    <div class="flex-1 min-w-0">
                        <div class="flex justify-between items-start">
                            <div class="font-bold text-gray-800 text-sm truncate pr-2">${item.name}</div>
                            <div class="text-orange-600 font-bold text-sm">${itemTotal.toLocaleString()}đ</div>
                        </div>
                        <div class="text-xs text-gray-500 mt-1 flex flex-wrap gap-1 mb-1">
                             ${currentPriceRate > 1 ? `<span class="bg-blue-100 text-blue-700 px-1.5 rounded font-bold text-[10px]">APP</span>` : ''}
                            <span class="bg-gray-100 px-1.5 rounded text-gray-600 font-medium">${item.size}</span>
                            <span class="bg-gray-100 px-1.5 rounded text-gray-600">${item.sugar}% Đường</span>
                            <span class="text-gray-800 font-bold ml-1 bg-orange-100 px-1.5 rounded text-orange-700">SL: ${item.qty}</span>
                        </div>
                        ${toppingHtml}
                    </div>
                    <button onclick="removeFromCart(${index})" class="absolute top-2 right-2 p-1 text-gray-300 hover:text-red-500 hover:bg-red-50 rounded-full transition-colors">
                        <i data-lucide="trash-2" class="w-4 h-4"></i>
                    </button>
                </div>
            `;
            container.innerHTML += html;
        });

        // Final Total after Discount
        const finalTotal = Math.max(0, total - currentDiscount);

        if (subTotalEl) subTotalEl.innerText = total.toLocaleString() + 'đ';
        if (totalEl) totalEl.innerText = finalTotal.toLocaleString() + 'đ';

        if (window.lucide) lucide.createIcons();
    }

    function removeFromCart(index) {
        cart.splice(index, 1);
        resetCoupon();
        renderCart();
    }
    function clearCart() {
        cart = [];
        resetCoupon();
        renderCart();
    }

    // --- 6. CHECKOUT (CORRECTED) ---
    function setPaymentMethod(method) {
        currentPaymentMethod = method;
        const btnCash = document.getElementById('btn-cash');
        const btnTransfer = document.getElementById('btn-transfer');
        // ... (Reset Classes Logic is same as before, omitted for brevity but you should keep it) ...
        const defaultClass = "py-2 rounded-lg text-xs font-bold transition-all text-gray-500 hover:text-gray-700 border border-transparent";
        const activeClassCash = "py-2 rounded-lg text-xs font-bold transition-all bg-white text-green-700 shadow-sm border border-transparent";
        const activeClassTransfer = "py-2 rounded-lg text-xs font-bold transition-all bg-white text-blue-700 shadow-sm border border-transparent";

        if (btnCash) btnCash.className = defaultClass;
        if (btnTransfer) btnTransfer.className = defaultClass;

        if (method === 'cash' && btnCash) btnCash.className = activeClassCash;
        else if (btnTransfer) btnTransfer.className = activeClassTransfer;
    }

    function checkout() {
        if (cart.length === 0) return alert("Giỏ hàng trống!");

        // 1. Calc Raw Total with Markup
        const rawTotal = cart.reduce((sum, item) => sum + ((item.price * currentPriceRate) * item.qty), 0);
        // 2. Calc Final Total
        const finalTotal = Math.max(0, rawTotal - currentDiscount);

        // Get Order Source Text
        const select = document.getElementById('order-source');
        const sourceName = select.options[select.selectedIndex].text;

        const orderData = {
            Total: finalTotal,
            PaymentMethod: currentPaymentMethod,
            CouponId: currentKmId,
            DiscountAmount: currentDiscount,
            OrderSource: sourceName,

            Items: cart.map(c => ({
                ProductId: c.id,
                Quantity: c.qty,
                Size: c.size,
                Sugar: c.sugar,
                Price: c.price * currentPriceRate, // Send markup price to server
                Toppings: c.tops
            }))
        };

        const btn = event.currentTarget;
        const originalText = btn.innerHTML;
        btn.innerHTML = 'Đang xử lý...';
        btn.disabled = true;

        fetch('/Order/Checkout', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(orderData)
        })
            .then(res => res.json())
            .then(data => {
                btn.innerHTML = originalText;
                btn.disabled = false;
                if (data.success) {
                    alert('✅ Thanh toán thành công! Mã đơn: ' + data.orderId);
                    localStorage.removeItem('hisa_cart');
                    clearCart();
                    setPaymentMethod('cash');
                } else {
                    alert('❌ Lỗi: ' + data.message);
                }
            })
            .catch(err => {
                btn.innerHTML = originalText;
                btn.disabled = false;
                alert('❌ Lỗi kết nối server');
                console.error(err);
            });
    }
