@{
    ViewBag.Title = "Đổi Mật Khẩu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="max-w-md mx-auto mt-10 bg-white p-8 rounded-xl shadow-md border border-gray-100">
    <div class="text-center mb-6">
        <div class="inline-flex items-center justify-center w-12 h-12 bg-orange-100 rounded-full mb-3 text-orange-600">
            <i data-lucide="lock" class="w-6 h-6"></i>
        </div>
        <h2 class="text-2xl font-bold text-gray-800">Đổi Mật Khẩu</h2>
        <p class="text-sm text-gray-500">Cập nhật mật khẩu mới để bảo vệ tài khoản</p>
    </div>

    <form action="/Account/ChangePassword" method="post" class="space-y-4">

        @if (ViewBag.Error != null)
        {
            <div class="p-3 bg-red-50 text-red-600 text-sm rounded-lg flex items-center gap-2 border border-red-100">
                <i data-lucide="alert-circle" class="w-4 h-4"></i> @ViewBag.Error
            </div>
        }
        @if (ViewBag.Success != null)
        {
            <div class="p-3 bg-green-50 text-green-600 text-sm rounded-lg flex items-center gap-2 border border-green-100">
                <i data-lucide="check-circle" class="w-4 h-4"></i> @ViewBag.Success
            </div>
        }

        <div>
            <label class="block text-xs font-bold text-gray-500 uppercase mb-1">Mật khẩu hiện tại</label>
            <div class="relative">
                <input type="password" name="currentPassword" required
                       class="w-full px-3 py-2 pl-9 border rounded-lg focus:ring-2 focus:ring-orange-500 outline-none transition-all" />
                <i data-lucide="key" class="w-4 h-4 text-gray-400 absolute left-3 top-2.5"></i>
            </div>
        </div>

        <div>
            <label class="block text-xs font-bold text-gray-500 uppercase mb-1">Mật khẩu mới</label>
            <div class="relative">
                <input type="password" name="newPassword" required
                       class="w-full px-3 py-2 pl-9 border rounded-lg focus:ring-2 focus:ring-orange-500 outline-none transition-all" />
                <i data-lucide="lock" class="w-4 h-4 text-gray-400 absolute left-3 top-2.5"></i>
            </div>
        </div>

        <div>
            <label class="block text-xs font-bold text-gray-500 uppercase mb-1">Xác nhận mật khẩu mới</label>
            <div class="relative">
                <input type="password" name="confirmPassword" required
                       class="w-full px-3 py-2 pl-9 border rounded-lg focus:ring-2 focus:ring-orange-500 outline-none transition-all" />
                <i data-lucide="check" class="w-4 h-4 text-gray-400 absolute left-3 top-2.5"></i>
            </div>
        </div>

        <div class="pt-2">
            <button type="submit" class="w-full bg-orange-600 hover:bg-orange-700 text-white font-bold py-2.5 rounded-lg shadow-md transition-all flex justify-center items-center gap-2">
                <i data-lucide="save" class="w-4 h-4"></i> Lưu Thay Đổi
            </button>
        </div>
    </form>
</div>

@section scripts {
    <script>
        lucide.createIcons();
    </script>
}