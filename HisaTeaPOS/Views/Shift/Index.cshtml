@model IEnumerable<HisaTeaPOS.Models.CaLamViec>
@{
    ViewBag.Title = "Ca Làm Việc";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var currentShift = ViewBag.CurrentShift as HisaTeaPOS.Models.CaLamViec;
    var mySchedules = ViewBag.MySchedules as List<HisaTeaPOS.Models.LichLamViec>;
}

<div class="grid grid-cols-1 md:grid-cols-2 gap-6 animate-in fade-in duration-300">

    <div class="space-y-6">

        <div class="bg-gradient-to-r from-blue-600 to-blue-500 rounded-xl shadow-lg p-5 text-white relative overflow-hidden">
            <i data-lucide="wallet" class="absolute -bottom-4 -right-4 w-24 h-24 text-white opacity-20"></i>

            <h3 class="font-bold text-blue-100 text-sm mb-4 uppercase tracking-wider">Thu nhập tháng @DateTime.Now.Month</h3>

            <div class="flex justify-between items-end">
                <div>
                    <div class="text-xs text-blue-100 mb-1">Lương tạm tính</div>
                    <div class="text-3xl font-bold">@string.Format("{0:N0}đ", ViewBag.EstimatedSalary)</div>
                </div>
                <div class="text-right">
                    <div class="text-xs text-blue-100 mb-1">Tổng giờ làm</div>
                    <div class="text-xl font-bold">@Math.Round(ViewBag.TotalHours ?? 0, 1) h</div>
                </div>
            </div>

            <div class="mt-4 pt-3 border-t border-white/20 flex justify-between text-xs text-blue-100">
                <span>Mức lương: @string.Format("{0:N0}đ", ViewBag.HourlyRate)/h</span>
                <span>*Chưa bao gồm thưởng/phạt</span>
            </div>
        </div>

        <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-200 text-center">
            <h3 class="font-bold text-lg text-gray-800 mb-4">Chấm Công Hôm Nay</h3>
            @if (currentShift != null)
            {
                <div class="p-4 bg-green-50 border border-green-200 rounded-xl mb-4 animate-pulse">
                    <div class="text-green-800 font-bold text-lg">ĐANG TRONG CA</div>
                    <div class="text-green-600 mb-3 text-sm">Bắt đầu: @currentShift.GioBatDau.ToString("HH:mm")</div>
                    <form action="@Url.Action("CheckOut", "Shift")" method="post">
                        <input type="hidden" name="maCa" value="@currentShift.MaCa" />
                        <button type="submit" class="px-6 py-2 bg-red-500 text-white font-bold rounded-lg shadow hover:bg-red-600 transition-colors">
                            Kết thúc ca
                        </button>
                    </form>
                </div>
            }
            else
            {
                <form action="@Url.Action("CheckIn", "Shift")" method="post">
                    <button type="submit" class="w-full py-3 bg-gradient-to-r from-green-500 to-green-600 text-white font-bold rounded-xl shadow-lg hover:from-green-600 hover:to-green-700 transition-all active:scale-95">
                        <i data-lucide="play-circle" class="w-5 h-5 inline mr-1"></i> Bắt đầu ca làm việc
                    </button>
                </form>
            }
        </div>


        <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-200">
            <h3 class="font-bold text-lg mb-4 flex items-center gap-2">
                <i data-lucide="history" class="w-5 h-5 text-gray-500"></i> Lịch sử chấm công
            </h3>
            <div class="overflow-y-auto max-h-[300px]">
                <table class="w-full text-sm text-left">
                    <tbody class="divide-y">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="py-3">
                                    <div class="font-bold text-gray-700">@item.GioBatDau.ToString("dd/MM")</div>
                                    <div class="text-xs text-gray-400">@item.GioBatDau.ToString("HH:mm") - @(item.GioKetThuc.HasValue ? item.GioKetThuc.Value.ToString("HH:mm") : "...")</div>
                                </td>
                                <td class="py-3 text-right font-bold text-orange-600">
                                    @(item.TongGio ?? 0)h
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-200 h-fit">
        <h3 class="font-bold text-lg mb-4 flex items-center gap-2 text-blue-800">
            <i data-lucide="calendar-check" class="w-5 h-5"></i>
            Lịch làm của tôi
        </h3>
        @if (mySchedules != null && mySchedules.Any())
        {
            <div class="space-y-3">
                @foreach (var item in mySchedules)
                {
                    <div class="flex items-center gap-3 p-3 bg-blue-50 rounded-xl border border-blue-100">
                        <div class="bg-white p-2 rounded-lg border border-blue-200 text-center min-w-[60px] shadow-sm">
                            <div class="text-[10px] text-gray-500 uppercase font-bold">
                                @item.NgayLam.ToString("ddd", new System.Globalization.CultureInfo("vi-VN"))
                            </div>
                            <div class="text-xl font-bold text-blue-600 leading-none">
                                @item.NgayLam.Day
                            </div>
                        </div>
                        <div>
                            <div class="font-bold text-gray-800">@item.CaLam</div>
                            <div class="text-xs text-gray-500">
                                @item.NgayLam.ToString("dd/MM/yyyy")
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="text-center py-10 text-gray-400">
                <i data-lucide="calendar-off" class="w-12 h-12 mx-auto mb-2 opacity-20"></i>
                <p class="text-sm">Chưa có lịch xếp ca sắp tới</p>
            </div>
        }
    </div>
  
</div>


@section scripts {
    <script>
        lucide.createIcons();
    </script>
}