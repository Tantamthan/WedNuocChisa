
@model HisaTeaPOS.Models.CauHinh
@{ ViewBag.Title = "Cài Đặt Hệ Thống"; Layout = "~/Views/Shared/_Layout.cshtml"; }

<div class="max-w-3xl mx-auto bg-white rounded-xl shadow-sm border p-6 animate-in fade-in">
    <h3 class="font-bold text-xl text-gray-800 flex items-center gap-2 mb-6">
        <i data-lucide="settings" class="w-6 h-6 text-orange-600"></i> Cài Đặt Hệ Thống
    </h3>

    <form action="@Url.Action("Save", "Setting")" method="post" class="space-y-6">
        <div class="space-y-4">
            <h4 class="font-bold text-sm text-gray-500 uppercase border-b pb-2">Thông tin cửa hàng (In trên Bill)</h4>
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Tên quán</label>
                <input type="text" name="TenQuan" value="@Model.TenQuan" class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-orange-500 outline-none" />
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Địa chỉ</label>
                <input type="text" name="DiaChi" value="@Model.DiaChi" class="w-full px-4 py-2 border rounded-lg outline-none" />
            </div>
            <div class="grid grid-cols-2 gap-4">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Số điện thoại</label>
                    <input type="text" name="SoDienThoai" value="@Model.SoDienThoai" class="w-full px-4 py-2 border rounded-lg outline-none" />
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Lời chào cuối bill</label>
                    <input type="text" name="LoiChao" value="@Model.LoiChao" class="w-full px-4 py-2 border rounded-lg outline-none" />
                </div>
            </div>
        </div>

        <div class="space-y-4">
            <h4 class="font-bold text-sm text-gray-500 uppercase border-b pb-2 flex items-center gap-2">
                <i data-lucide="printer" class="w-4 h-4"></i> Cấu hình thiết bị
            </h4>
            <div class="grid grid-cols-2 gap-4">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">IP Máy in bill</label>
                    <input type="text" name="PrinterIP" value="@Model.PrinterIP" class="w-full px-4 py-2 border rounded-lg font-mono outline-none" placeholder="192.168.1.200" />
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Mật khẩu Wifi</label>
                    <input type="text" name="WifiPass" value="@Model.WifiPass" class="w-full px-4 py-2 border rounded-lg outline-none" />
                </div>
            </div>
        </div>

        <button type="submit" class="w-full py-3 bg-gray-900 hover:bg-black text-white font-bold rounded-xl shadow-lg transition-all flex items-center justify-center gap-2">
            <i data-lucide="save" class="w-5 h-5"></i> Lưu Thay Đổi
        </button>
    </form>
</div>
@section scripts {
    <script>lucide.createIcons();</script> }