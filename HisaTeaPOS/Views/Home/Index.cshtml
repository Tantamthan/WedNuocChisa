@model IEnumerable<HisaTeaPOS.Models.TopProductViewModel>
@{
    ViewBag.Title = "Tổng Quan";
}

<div class="space-y-6 animate-in fade-in duration-300">
    <div class="flex justify-between items-end">
        <div>
            <h2 class="text-2xl font-bold text-gray-800">Xin chào, Chúc một ngày tốt lành! 👋</h2>
            <p class="text-gray-500">Dưới đây là tình hình kinh doanh ngày @DateTime.Now.ToString("dd/MM/yyyy")</p>
        </div>
        <div class="text-right hidden sm:block">
            <span class="bg-orange-100 text-orange-700 font-bold px-3 py-1 rounded-full text-sm">
                Đang mở cửa
            </span>
        </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <div class="bg-white p-5 rounded-2xl shadow-sm border border-gray-100 flex items-center gap-4 transition-transform hover:scale-[1.02]">
            <div class="p-3 bg-blue-50 text-blue-600 rounded-xl">
                <i data-lucide="dollar-sign" class="w-8 h-8"></i>
            </div>
            <div>
                <div class="text-sm text-gray-500 font-medium">Doanh thu hôm nay</div>
                <div class="text-2xl font-bold text-gray-900">@string.Format("{0:N0}đ", ViewBag.Revenue)</div>
            </div>
        </div>
        <div class="bg-white p-5 rounded-2xl shadow-sm border border-gray-100 flex items-center gap-4 transition-transform hover:scale-[1.02]">
            <div class="p-3 bg-orange-50 text-orange-600 rounded-xl">
                <i data-lucide="coffee" class="w-8 h-8"></i>
            </div>
            <div>
                <div class="text-sm text-gray-500 font-medium">Số ly đã bán</div>
                <div class="text-2xl font-bold text-gray-900">@ViewBag.TotalCups ly</div>
            </div>
        </div>

        <div class="bg-white p-5 rounded-2xl shadow-sm border border-gray-100 flex items-center gap-4 transition-transform hover:scale-[1.02]">
            <div class="p-3 bg-purple-50 text-purple-600 rounded-xl">
                <i data-lucide="file-text" class="w-8 h-8"></i>
            </div>
            <div>
                <div class="text-sm text-gray-500 font-medium">Tổng đơn hàng</div>
                <div class="text-2xl font-bold text-gray-900">@ViewBag.TotalOrders đơn</div>
            </div>
        </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <div class="lg:col-span-2 bg-white p-6 rounded-2xl shadow-sm border border-gray-100">
            <h3 class="font-bold text-lg text-gray-800 mb-4 flex items-center gap-2">
                <i data-lucide="trending-up" class="w-5 h-5"></i> Biểu đồ doanh thu tuần này
            </h3>
            <div class="relative h-64 w-full">
                <canvas id="revenueChart"></canvas>
            </div>
        </div>

        <div class="bg-white p-6 rounded-2xl shadow-sm border border-gray-100">
            <h3 class="font-bold text-lg text-gray-800 mb-4 flex items-center gap-2">
                <i data-lucide="award" class="w-5 h-5 text-yellow-500"></i> Top Món Hôm Nay
            </h3>
            <div class="space-y-4">
                @if (Model != null && Model.Any())
                {
                    int i = 1;
                    foreach (var item in Model)
                    {
                        <div class="flex items-center gap-3 border-b border-gray-50 pb-2 last:border-0">
                            <div class="font-bold text-gray-400 w-4">#@i</div>
                            <div class="w-10 h-10 rounded-lg bg-gray-100 overflow-hidden flex-shrink-0 border border-gray-200">
                                <img src="@(item.HinhAnh ?? "https://via.placeholder.com/150")" class="w-full h-full object-cover" onerror="this.src='https://via.placeholder.com/150'" />
                            </div>
                            <div class="flex-1 min-w-0">
                                <div class="font-medium text-sm text-gray-800 truncate">@item.TenSP</div>
                                <div class="text-xs text-gray-500">Đã bán: <span class="font-bold text-orange-600">@item.SoLuong</span> ly</div>
                            </div>
                        </div>
                        i++;
                    }
                }
                else
                {
                    <p class="text-gray-400 italic text-sm text-center py-4">Chưa có dữ liệu bán hàng hôm nay</p>
                }
            </div>
        </div>
    </div>
</div>


<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        lucide.createIcons();

        var svData = @Html.Raw(ViewBag.ChartData ?? "[]");
        var svLabels = @Html.Raw(ViewBag.ChartLabels ?? "[]");

        var ctx = document.getElementById('revenueChart').getContext('2d');

        var myChart = new Chart(ctx, {
            type: 'line', // ĐỔI SANG LINE CHART
            data: {
                labels: svLabels,
                datasets: [{
                    label: 'Doanh thu (VNĐ)',
                    data: svData,
                    backgroundColor: 'rgba(249, 115, 22, 0.1)', // Nền trong suốt
                    borderColor: 'rgba(249, 115, 22, 1)',
                    borderWidth: 3,
                    fill: true, // Tô màu dưới đường line
                    tension: 0.4, // Đường cong mượt
                    pointRadius: 6, // Kích thước điểm
                    pointHoverRadius: 8, // Kích thước khi hover
                    pointBackgroundColor: 'rgba(249, 115, 22, 1)',
                    pointBorderColor: '#fff',
                    pointBorderWidth: 2,
                    pointHoverBackgroundColor: 'rgba(249, 115, 22, 1)',
                    pointHoverBorderColor: '#fff'
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                interaction: {
                    mode: 'index',
                    intersect: false,
                },
                plugins: {
                    legend: {
                        display: false
                    },
                    tooltip: {
                        backgroundColor: 'rgba(0, 0, 0, 0.8)',
                        padding: 12,
                        titleColor: '#fff',
                        bodyColor: '#fff',
                        bodyFont: {
                            size: 14,
                            weight: 'bold'
                        },
                        callbacks: {
                            label: function(context) {
                                return 'Doanh thu: ' + context.raw.toLocaleString('vi-VN') + ' đ';
                            }
                        }
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        grid: {
                            color: 'rgba(0, 0, 0, 0.05)',
                            drawBorder: false
                        },
                        ticks: {
                            callback: function(value) {
                                // Format số cho trục Y
                                if (value >= 1000000) {
                                    return (value / 1000000).toFixed(1) + 'M';
                                } else if (value >= 1000) {
                                    return (value / 1000).toFixed(0) + 'K';
                                }
                                return value.toLocaleString('vi-VN');
                            },
                            font: {
                                size: 11
                            },
                            color: '#6b7280'
                        }
                    },
                    x: {
                        grid: {
                            display: false,
                            drawBorder: false
                        },
                        ticks: {
                            font: {
                                size: 12,
                                weight: '500'
                            },
                            color: '#6b7280'
                        }
                    }
                }
            }
        });
    });
</script>